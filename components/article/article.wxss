/* components/article/article.wxss */

.ar_wrap .ar_con{
    width: 100%;
    height: 200rpx;
}
.ar_wrap .ar_con .pic{
  width: 100%;
  height: 300rpx;
  position: relative;
}
.ar_wrap .ar_con .pic image{
  width: 100%;
  height: 300rpx;
}
.ar_wrap .ar_con .pic .vote{
  width: 70rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  border-radius: 50%;
  background-color:#FFDA00;
  font-size: 28rpx;
  font-weight: 800;
  position: absolute;
  bottom: 20rpx;
  left:20rpx;
  transform: rotate(-45deg);
}
.ar_wrap .ar_con .pic .num_con{
  width: 120rpx;
  height: 90rpx;
  text-align: center;
  background-color:rgba(0, 0, 0, 0.6);
  font-size: 30rpx;
  font-weight: 800;
  color: #FFDA00;
  position: absolute;
  top: 20rpx;
  right:20rpx; 
}
.ar_wrap .ar_con .pic .num_con .num{
  display: inline-block;
  font-size: 20rpx;
  color: #fff;
}